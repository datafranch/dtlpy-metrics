{
  "version": "1.0.42",
  "creator": "yaya.t@dataloop.ai",
  "name": "scoring-and-metrics",
  "displayName": "Scoring and metrics app",
  "description": "Calculate scores for items and annotations, such as in tasks with consensus.",
  "icon": "icon-dl-analytics",
  "categories": [],
  "source": {
    "type": "git",
    "repo": "https://github.com/dataloop-ai-apps/scoring-and-metrics.git",
    "tag": ""
  },
  "scope": "project",
  "components": {
    "pipelineNodes": [
      {
        "invoke": {
          "type": "function",
          "namespace": "custom_nodes.calculate_consensus_score"
        },
        "categories": [
          "data"
        ]
      },
      {
        "invoke": {
          "type": "function",
          "namespace": "custom_nodes.create_item_consensus_score"
        },
        "categories": [
          "data"
        ]
      }
    ],
    "modules": [
      {
        "name": "custom_nodes",
        "entryPoint": "dtlpymetrics/scoring.py",
        "className": "ScoringAndMetrics",
        "initInputs": [],
        "functions": [
          {
            "name": "create_item_consensus_score",
            "description": "Calculate the consensus score for each item with consensus",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "displayIcon": "analytics",
            "displayName": "Scoring and Metrics"
          },
          {
            "name": "calculate_consensus_score",
            "description": "Calculate the consensus score for items in a task with consensus",
            "input": [
              {
                "type": "Task",
                "name": "consensus_task"
              }
            ],
            "output": [
              {
                "type": "Dict",
                "name": "dict"
              },
              {
                "type": "Task",
                "name": "consensus_task"
              }
            ],
            "displayIcon": "task-filled",
            "displayName": "Scoring and Metrics"
          }
        ]
      }
    ],
    "services": [
      {
        "name": "scores-and-metrics",
        "moduleName": "custom_nodes",
        "runtime": {
          "podType": "regular-xs",
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/cpu/node14:latest",
          "numReplicas": 1,
          "concurrency": 10,
          "pyPackages": {},
          "singleAgent": false,
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 1,
            "maxReplicas": 2,
            "queueLength": 10
          },
          "preemptible": false,
          "executionTimeout": 3600,
          "drainTime": 600,
          "onReset": "failed",
          "runExecutionAsProcess": false
        },
        "maxAttempts": 3
      }
    ]
  }
}